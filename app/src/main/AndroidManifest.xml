        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".activities.OnboardingExample4Activity"/>
        <activity android:name=".activities.OnboardingFinishActivity" />
        <activity android:name=".activities.OnboardingExample1Activity" />
        <activity android:name=".activities.OnboardingExample2Activity" />
        <activity android:name=".activities.OnboardingExample3Activity" />
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>